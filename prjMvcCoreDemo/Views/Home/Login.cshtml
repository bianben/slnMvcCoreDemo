@{
    ViewBag.Title = "Login";
}

<form method="post">
    <h2>登入</h2>
    請輸入帳號及密碼
    <div class="form-group">
        帳號(註冊時的Email)
        <div class="col-md-10">
            @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        密碼
        <div class="col-md-10">
            @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <input type="submit" value="登入" />
</form>